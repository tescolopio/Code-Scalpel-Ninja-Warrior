{
  "version": "1.0.0",
  "governance": {
    "blast_radius": {
      "max_files_per_operation": 50,
      "max_lines_changed": 5000,
      "max_functions_modified": 50,
      "max_classes_modified": 25
    },
    "protected_paths": [
      "src/security/**",
      "src/auth/**",
      "*.key",
      "*.pem",
      ".env"
    ],
    "allowed_operations": [
      "analyze",
      "extract",
      "get_file_context",
      "get_symbol_references",
      "get_project_map",
      "crawl_project",
      "get_call_graph",
      "get_graph_neighborhood",
      "get_cross_file_dependencies",
      "security_scan",
      "cross_file_security_scan",
      "unified_sink_detect",
      "type_evaporation_scan",
      "scan_dependencies",
      "symbolic_execute",
      "generate_unit_tests",
      "simulate_refactor",
      "validate_paths",
      "verify_policy_integrity",
      "update_symbol"
    ],
    "denied_operations": [
      "delete_file",
      "bulk_replace"
    ]
  },
  "enforcement": {
    "mode": "warn",
    "fail_on_violation": false,
    "log_violations": true,
    "require_human_review_on_suspicious_patterns": false
  },
  "sandbox": {
    "enabled": true,
    "max_execution_time_seconds": 60,
    "max_memory_mb": 1024,
    "max_cpu_percent": 90,
    "allow_network": false,
    "allow_filesystem_write": false,
    "max_processes": 25,
    "max_file_descriptors": 256
  },
  "symbolic_execution": {
    "enabled": true,
    "max_paths": 2000,
    "timeout_seconds": 120,
    "solver_timeout_seconds": 20,
    "path_explosion_detection": true
  },
  "audit": {
    "enabled": true,
    "log_file": ".code-scalpel/audit.log",
    "include_diffs": true,
    "cryptographic_signing": false
  },
  "integrity": {
    "verify_on_startup": true,
    "hash_algorithm": "sha256"
  }
}
